{
  "rate_limit": {
    "default": {
      "max_requests": 4000,
      "burst_size": 50
    },
    "custom": {
      "kufar": {
        "max_requests": 400,
        "burst_size": 10
      }
    }
  },

  "debug": false,
  "version": 1,
  "name": "My lovely gateway",
  "port": 8080,
  "timeout": "10s",
  "max_rate": 1000,
  "client_max_rate": 1000,
  "concurrent_calls": "50",
  "cache_ttl": 3600,
  "host": [
    "http://127.0.0.1:8080",
    "http://127.0.0.1:8081",
    "http://www.lavanguardia.com",
    "http://34.248.41.202:8080"
  ],
  "endpoints": [
    {
      "endpoint": "/data2/{tenant1Id}/{tenant2Id}",
      "method": "GET",
      "client_max_rate": 10,
      "concurrent_calls": "5",
      "endpoint_max_rate": "12",
      "backend": [
        {
          "host": [
            "http://127.0.0.1:8081"
          ],
          "url_pattern": "/api/v1/tenants/{tenant1Id}",
          "encoding": "json",
          "group": "tenant1"
        },
        {
          "host": [
            "http://127.0.0.1:8081"
          ],
          "url_pattern": "/api/v1/tenants/{tenant2Id}",
          "encoding": "json",
          "group": "tenant2"
        }
      ]
    }
  ],
  "oauth": {
    "disable": true
  }
}