{
  "rate_limit": {
    "default": {
      "max_requests": 4000,
      "burst_size": 50
    },
    "custom": {
      "kufar": {
        "max_requests": 400,
        "burst_size": 10
      }
    }
  },
  "debug": true,
  "version": 1,
  "name": "My lovely gateway",
  "port": 8081,
  "timeout": "10s",
  "max_rate": 1000,
  "client_max_rate": 1000,
  "concurrent_calls": "50",
  "cache_ttl": 3600,
  "host": [
    "http://127.0.0.1:8080"
  ],
  "endpoints": [
    {
      "endpoint": "/user/{name}",
      "method": "GET",
      "client_max_rate": 10,
      "concurrent_calls": "1",
      "endpoint_max_rate": "12",
      "backend": [
        {
          "host": [
            "http://127.0.0.1:8080"
          ],
          "url_pattern": "/user/{name}",
          "encoding": "json",
          "group": "user"
        }
      ]
    },
    {
      "endpoint": "/user/{name}/*action",
      "method": "GET",
      "client_max_rate": 10,
      "concurrent_calls": "1",
      "endpoint_max_rate": "12",
      "backend": [
        {
          "host": [
            "http://127.0.0.1:8080"
          ],
          "url_pattern": "/user/{name}",
          "encoding": "json",
          "group": "user"
        }
      ]
    }
  ],
  "oauth": {
    "disable": true
  }
}